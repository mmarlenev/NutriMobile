<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_planta_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="@color/primary_text"
            android:layout_toStartOf="@id/buttons_layout" />

        <TextView
            android:id="@+id/tv_planta_etapa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAppearance="?attr/textAppearanceListItemSecondary"
            android:textColor="@color/secondary_text"
            android:layout_below="@id/tv_planta_nombre"
            android:layout_toStartOf="@id/buttons_layout" />

        <TextView
            android:id="@+id/tv_planta_fecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAppearance="?attr/textAppearanceListItemSecondary"
            android:textColor="@color/secondary_text"
            android:layout_below="@id/tv_planta_etapa"
            android:layout_toStartOf="@id/buttons_layout" />

        <LinearLayout
            android:id="@+id/buttons_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true">

            <ImageButton
                android:id="@+id/btn_modificar_planta"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_edit"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Modificar"
                app:tint="@color/primary" />

            <ImageButton
                android:id="@+id/btn_eliminar_planta"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_delete"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Eliminar"
                app:tint="@color/primary" />
        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>