<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Añadir Nueva Planta"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:layout_marginBottom="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre:"
        android:textAppearance="?attr/textAppearanceCaption" />

    <EditText
        android:id="@+id/et_nombre_planta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Ej: Tomate Cherry" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo:"
        android:textAppearance="?attr/textAppearanceCaption" />

    <RadioGroup
        android:id="@+id/rg_tipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/rb_autofloreciente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Autofloreciente" />

        <RadioButton
            android:id="@+id/rb_fotoperiodica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fotoperiódica" />

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Etapa:"
        android:textAppearance="?attr/textAppearanceCaption" />

    <Spinner
        android:id="@+id/spinner_etapa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:entries="@array/etapas_array" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha:"
        android:textAppearance="?attr/textAppearanceCaption" />

    <DatePicker
        android:id="@+id/dp_fecha_origen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>