<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Registrar Etapa o Suceso"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:layout_marginBottom="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Planta:"
        android:textAppearance="?attr/textAppearanceCaption" />

    <Spinner
        android:id="@+id/spinner_planta_etapa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Tipo de Registro:"
        android:textAppearance="?attr/textAppearanceCaption" />

    <RadioGroup
        android:id="@+id/rg_tipo_registro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_etapa"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Etapa" />

        <RadioButton
            android:id="@+id/rb_suceso"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Suceso" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Detalle:"
        android:textAppearance="?attr/textAppearanceCaption" />

    <Spinner
        android:id="@+id/spinner_estado_etapa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Fecha:"
        android:textAppearance="?attr/textAppearanceCaption" />

    <DatePicker
        android:id="@+id/dp_fecha_etapa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>